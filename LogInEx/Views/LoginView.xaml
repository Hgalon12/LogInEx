<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogInEx.Views.LoginView"
             Title="LoginView">
    <VerticalStackLayout>


        <Entry Placeholder="Type user name here..." Text="{Binding UserName}"></Entry>
        <Entry Placeholder="Type password here..." Text="{Binding Password}"></Entry>
        <Button Text=" login" Command="{Binding GetIsExist}"></Button>
        <Button Text=" Cancel" Command="{Binding Cancel}"></Button>
        <Label 
          Text="{Binding Massage }"
          TextColor="{Binding MassageColor}"
          VerticalOptions="Center" 
          HorizontalOptions="Center" />


    </VerticalStackLayout>
</ContentPage>